<h1>Quartos</h1>

<table>
  <tr>
    <th>Numero</th>
    <th>Andar</th>
    <th>Tipo</th>
    <th>Camas</th>
    <th>Classe</th>
  </tr>

<% @quartos.each do |quarto| %>
  <tr>
    <td><%=h quarto.numero %></td>
    <td><%=h quarto.andar %></td>
    <td><%=h quarto.tipo_nome %></td>
    <td><%=h quarto.camas %></td>
    <td><%=h quarto.classe_nome %></td>
    <td><%= link_to 'Ver', quarto %></td>
    <td><%= link_to 'Editar', edit_quarto_path(quarto) %></td>
    <td><%= link_to 'Apagar', quarto, :confirm => 'Voce tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo quarto', new_quarto_path %>
