<h1>Reservas</h1>

<%= calendar_render %>

<table>
  <tr>
    <th>Cliente</th>
    <th>Data reserva</th>
    <th>Data fim</th>
    <th>Quarto</th>
  </tr>

<% @reservas.each do |reserva| %>
  <tr>
    <td><%=h reserva.cliente_id %></td>
    <td><%=h reserva.data_reserva %></td>
    <td><%=h reserva.data_fim %></td>
    <td><%=h reserva.quarto_id %></td>
    <td><%= link_to 'Ver', reserva %></td>
    <td><%= link_to 'Editar', edit_reserva_path(reserva) %></td>
    <td><%= link_to 'Apagar', reserva, :confirm => 'Sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova reserva', new_reserva_path %>
