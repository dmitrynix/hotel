<%=stylesheet_link_tag "divs"%>
<%= stylesheet_link_tag "tablecloth/tablecloth/tablecloth"%>
<%= javascript_include_tag "tablecloth"%>

<div id="Cabecalho">
    <h1>Hospedagem</h1>
</div>

<br><br>

<div id="container">
	<div id="content">

	        <div id="box_campos">
              <%= link_to 'Nova Hospedagem', new_hospedagem_path %>
          </div>

          <table>
            <tr>
              <th>Cliente</th>
              <th>Data reserva</th>
              <th>Data fim</th>
              <th>Quarto</th>
              <th width="20%">CONTROLE de Ações</th>
            </tr>

          <% @hospedagens.each do |hospedagem| %>
            <tr>
              <td><%=h hospedagem.cliente_id %></td>
              <td><%=h hospedagem.data_reserva %></td>
              <td><%=h hospedagem.data_fim %></td>
              <td><%=h hospedagem.quarto_id %></td>
              <td>
                <%= link_to 'Ver', hospedagem %>
                <%= link_to 'Adicionar Consumo', { :controller => :hospedagens, :action => :consumo, :id => hospedagem.id } %>
                <%= link_to 'Editar', edit_hospedagem_path(hospedagem) %>
                <%= link_to 'Apagar', hospedagem, :confirm => 'Sure?', :method => :delete %>
              </td>
            </tr>
          <% end %>
          </table>

          <br />
          <div id="box_campos">
              <%= link_to 'Nova Hospedagem', new_hospedagem_path %>
          </div>

 </div>

</div>

