<h1><%= @hospedagem.cliente_nome %></h1>

<% form_for :consumo, :url => { :controller => :hospedagens, :action => :consumir } do |f| %>
  <%= label_tag :produto_id %>
  <%= collection_select :consumo, :produto_id, Produto.all, :id, :nome, :include_blank => true %>

  <p>
    <%= label_tag :valor %>
    <%= text_field_tag 'consumo[valor]' %>
  </p>

  <p>
    <%= label_tag :quantidade %>
    <%= text_field_tag 'consumo[quantidade]' %>
  </p>

  <%= submit_tag %>
<% end %>
