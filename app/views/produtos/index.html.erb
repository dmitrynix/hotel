<%=stylesheet_link_tag "divs"%>
<%= stylesheet_link_tag "tablecloth/tablecloth/tablecloth"%>
<%= javascript_include_tag "tablecloth"%>

<div id="Cabecalho">
	<h1>Produtos</h1>
</div>

<br><br>

<div id="container">
	<div id="content">

          <div id="box_campos">
            <%= link_to 'Novo produto', new_produto_path %>
          </div>


          <table>
            <tr>
              <th>Nome</th>
              <th>Preco</th>
               <th width="20%">CONTROLE de Ações</th>
            </tr>

          <% @produtos.each do |produto| %>
            <tr>
              <td><%=h produto.nome %></td>
              <td><%=h produto.preco %></td>
              <td>
                <%= link_to 'Ver', produto %>
                <%= link_to 'Editar', edit_produto_path(produto) %>
                <%= link_to 'Apagar', produto, :confirm => 'Certeza?', :method => :delete %>
              </td>
            </tr>
          <% end %>
          </table>

          <br />

          <div id="box_campos">
            <%= link_to 'Novo produto', new_produto_path %>
          </div>

